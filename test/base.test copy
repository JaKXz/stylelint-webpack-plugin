import { resolve } from 'path';

import webpack from 'webpack';

const assign = (...args) => Object.assign({}, ...args);

// const StyleLintPlugin = require('../src');

const conf = require('./utils/conf');

// const configFilePath = join(__dirname, '.stylelintrc');

describe('stylelint-webpack-plugin', () => {
  it('works with a simple file', (done) => {
    const compiler = webpack(
      assign({}, conf(), {
        context: resolve('./test/fixtures/lint-free'),
      })
    )

    compiler.run((err, stats) => {
      expect(stats.hasWarnings()).toBe(false);
      expect(stats.hasErrors()).toBe(false);
      done();
    })
  });

  it('sends errors to the errors output only', (done) => {
    const compiler = webpack(
      assign({}, conf(), {
        context: resolve('./test/fixtures/single-error'),
      })
    )

    compiler.run((err, stats) => {
      expect(stats.hasWarnings()).toBe(false);
      expect(stats.hasErrors()).toBe(true);
      done();
    });
  });

  it('works with multiple source files', (done) => {
    const compiler = webpack(
      assign({}, conf(), {
        context: resolve('./test/fixtures/multiple-sources'),
      })
    )

    compiler.run((err, stats) => {
      const { errors } = stats.compilation;

      expect(stats.hasErrors()).toBe(true);
      expect(errors).toHaveLength(1);
      expect(errors[0]).toBeInstanceOf(Error);
      expect(errors[0].message).toContain(
        'fixtures/multiple-sources/_second.scss'
      );
      expect(errors[0].message).toContain(
        'fixtures/multiple-sources/test.scss'
      );

      done();
    });
  });
  /*
  it('sends warnings properly', () =>
    pack(
      assign({}, baseConfig, {
        context: resolve('./test/fixtures/rule-warning'),
      })
    ).then((stats) => {
      expect(stats.compilation.errors).to.have.length(0);
      expect(stats.compilation.warnings).to.have.length(1);
    }));

  it('fails on errors when asked to', () => {
    const config = {
      context: resolve('./test/fixtures/single-error'),
      plugins: [
        new StyleLintPlugin({
          configFile: configFilePath,
          failOnError: true,
        }),
      ],
    };

    return pack(assign({}, baseConfig, config))
      .then(expect.fail)
      .catch((err) => {
        expect(err.message).to.equal('Failed because of a stylelint error.');
      });
  });

  it('fails when .stylelintrc is not a proper format', () => {
    const config = {
      context: resolve('./test/fixtures/single-error'),
      plugins: [
        new StyleLintPlugin({
          configFile: join(__dirname, '.badstylelintrc'),
        }),
      ],
    };

    return pack(assign({}, baseConfig, config))
      .then(expect.fail)
      .catch((err) => {
        expect(err.message).to.match(/duplicated mapping key|Failed to parse/);
      });
  });

  describe('without StyleLintPlugin configuration', () => {
    const config = {
      plugins: [new StyleLintPlugin()],
    };

    it('works by using stylelint#cosmiconfig under the hood', () =>
      pack(
        assign({}, baseConfig, config, {
          context: resolve('./test/fixtures/lint-free'),
        })
      ).then((stats) => {
        expect(stats.compilation.errors).to.have.length(0);
        expect(stats.compilation.warnings).to.have.length(0);
      }));

    it('finds the right stylelintrc', () =>
      pack(
        assign({}, baseConfig, config, {
          context: resolve('./test/fixtures/rule-warning'),
        })
      ).then((stats) => {
        expect(stats.compilation.warnings).to.have.length(1);
      }));
  });

  describe('interop with NoErrorsPlugin', () => {
    it('works when failOnError is false', () => {
      const config = {
        context: resolve('./test/fixtures/single-error'),
        plugins: [
          new StyleLintPlugin({
            configFile: configFilePath,
          }),
        ],
      };

      return pack(assign({}, baseConfig, config)).then((stats) => {
        expect(stats.compilation.errors).to.have.length(1);
      });
    });

    describe('when failOnError is true', () => {
      const config = {
        plugins: [
          new StyleLintPlugin({
            configFile: configFilePath,
            failOnError: true,
          }),
        ],
      };

      it('throws when there is an error', () =>
        pack(
          assign({}, baseConfig, config, {
            context: resolve('./test/fixtures/single-error'),
          })
        )
          .then(expect.fail)
          .catch((err) => {
            expect(err).to.be.instanceof(Error);
          }));

      it('does not throw when there are only warnings', () =>
        pack(
          assign({}, baseConfig, config, {
            context: resolve('./test/fixtures/rule-warning'),
          })
        ).then((stats) => {
          expect(stats.compilation.warnings).to.have.length(1);
        }));
    });
  });

  describe('when `emitErrors` is disabled', () => {
    const config = {
      plugins: [
        new StyleLintPlugin({
          configFile: configFilePath,
          emitErrors: false,
        }),
      ],
    };

    it('does not print warnings or errors when there are none', () =>
      pack(
        assign({}, baseConfig, config, {
          context: resolve('./test/fixtures/lint-free'),
        })
      ).then((stats) => {
        expect(stats.compilation.errors).to.have.length(0);
        expect(stats.compilation.warnings).to.have.length(0);
      }));

    it('emits errors as warnings when asked to', () =>
      pack(
        assign({}, baseConfig, config, {
          context: resolve('./test/fixtures/single-error'),
        })
      ).then((stats) => {
        expect(stats.compilation.errors).to.have.length(0);
        expect(stats.compilation.warnings).to.have.length(1);
        expect(stats.compilation.warnings[0]).to.be.an.instanceof(Error);
        expect(stats.compilation.warnings[0].message.length > 0).to.equal(true);
      }));

    it('still indicates that warnings are warnings, even when emitting errors as warnings too', () =>
      pack(
        assign({}, baseConfig, config, {
          context: resolve('./test/fixtures/rule-warning'),
        })
      ).then((stats) => {
        expect(stats.compilation.errors).to.have.length(0);
        expect(stats.compilation.warnings).to.have.length(1);
        expect(stats.compilation.warnings[0]).to.be.an.instanceof(Error);
        expect(stats.compilation.warnings[0].message.length > 0).to.equal(true);
      }));
  });

  describe('lintDirtyModulesOnly flag is enabled', () => {
    it('skips linting on initial run', () => {
      const config = {
        context: resolve('./test/fixtures/single-error'),
        plugins: [
          new StyleLintPlugin({
            configFile: configFilePath,
            lintDirtyModulesOnly: true,
          }),
        ],
      };

      return pack(assign({}, baseConfig, config)).then((stats) => {
        expect(stats.compilation.errors).to.have.length(0);
        expect(stats.compilation.warnings).to.have.length(0);
      });
    });

    it('still skips on initial run with `emitErrors` disabled', () => {
      const config = {
        context: resolve('./test/fixtures/single-error'),
        plugins: [
          new StyleLintPlugin({
            configFile: configFilePath,
            lintDirtyModulesOnly: true,
            emitErrors: false,
          }),
        ],
      };

      return pack(assign({}, baseConfig, config)).then((stats) => {
        expect(stats.compilation.errors).to.have.length(0);
        expect(stats.compilation.warnings).to.have.length(0);
      });
    });
  });
  */
});
